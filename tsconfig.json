{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": false,
        "sourceMap": true,
        "jsx": "react",
        "outDir": "dist",
        "experimentalDecorators": true,
        "rootDir": "src",
        "declaration": true
    },
    "filesGlob": [
        "src/**/*.ts",
        "src/**/*.tsx"        
    ],
    "exclude": [
        "node_modules",
        "dist", 
        "__tests__",
        "__testData__"
    ]

}